<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

	<ImageView
		android:id="@+id/suggestion_img"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

	<TextView
		android:id="@+id/suggestion_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/suggestion_img"
		android:layout_toRightOf="@id/suggestion_img"
		android:textColor="@color/light_green_700"
		android:textSize="@dimen/large_txt_size"/>

	<TextView
		android:id="@+id/suggestion_content"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/suggestion_title"
		android:layout_toEndOf="@id/suggestion_img"
		android:layout_toRightOf="@id/suggestion_img"
		android:textColor="@color/light_green_700"
		android:textSize="@dimen/normal_txt_size"/>

</RelativeLayout>